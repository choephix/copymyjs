---
import Layout from './Layout.astro';
import Sidebar from '@/components/Sidebar.astro';
import Footer from '@/components/Footer.astro';

const { frontmatter, headings } = Astro.props;
---

<Layout title={frontmatter.title}>
  <div class='flex'>
    <Sidebar currentSlug={Astro.params.slug} headings={headings} />

    <!-- Main content -->
    <div class='flex-1 mx-auto px-8 py-12'>
      <main class='flex-1 max-w-4xl mx-auto'>
        <article class='markdown-content'>
          <!-- <h1 class="text-4xl font-bold mb-4">{frontmatter.folder}</h1> -->
          <!-- <h1 class="text-4xl font-bold mb-4">{frontmatter.title}</h1> -->
          <!-- <p class="text-gray-400 mb-8">Published on {frontmatter.publishDate}</p> -->
          <slot />
        </article>
      </main>
      <Footer />
    </div>
  </div>
</Layout>
